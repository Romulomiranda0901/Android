<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".llamadaymensaje"
    android:stretchColumns="*"
    >
    <LinearLayout
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone" />
    </LinearLayout>

    <TableRow>
    <Button
        android:text="1"
        android:id="@+id/btn1"
        />
    <Button
        android:text="2"
        android:id="@+id/btn2"/>
    <Button
        android:text="3"
        android:id="@+id/btn3"
        />
</TableRow>
    <TableRow>
        <Button
            android:text="4"
            android:id="@+id/btn4"/>
        <Button
            android:text="5"
            android:id="@+id/btn5"/>
            />
        <Button
            android:text="6"
            android:id="@+id/btn6"
            />
    </TableRow>
    <TableRow>
        <Button
            android:text="7"
            android:id="@+id/btn7"
            />
        <Button
            android:text="8"
            android:id="@+id/btn8"
            />
        <Button
            android:text="9"
            android:id="@+id/btn9"
            />
    </TableRow>
    <TableRow>
        <Button
            android:text="*"
            android:id="@+id/btn10"
            />
        <Button
            android:text="0"
            android:id="@+id/btn0"
            />
        <Button
            android:text="#"
            android:id="@+id/btn11"
            />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnll"
            android:text="LLamar" />
        <Button
            android:id="@+id/btnll2"
            android:text="LLamar2" />

        <Button
            android:id="@+id/btnC"
            android:text="C" />
    </TableRow>

    <LinearLayout android:orientation="horizontal">

        <Button
            android:id="@+id/mss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar mensaje" />

        <Button
            android:id="@+id/cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar contacto" />
    </LinearLayout>
</TableLayout>